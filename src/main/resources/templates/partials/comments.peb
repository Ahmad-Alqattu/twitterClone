<div class="comment mb-2 d-flex align-items-start">
    <img src="/profile/{{ comment.user.id }}/profile-pic" class="rounded-circle me-2" width="30" height="30" alt="{{ comment.user.username }}">
    <div class="comment-content">

        <p>
        <strong><a class="user-link" href="/profile/{{ comment.user.username }}">{{ comment.user.username }}</a></strong><small class="text-muted">{{ comment.createdAt | date("yyyy-MM-dd HH:mm") }}</small>
        </p><p class="mb-0">{{ comment.content }}</p>
    </div>
</div>
